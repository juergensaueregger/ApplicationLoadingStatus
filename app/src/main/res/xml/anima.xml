<?xml version="1.0" encoding="utf-8"?>


<MotionScene xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:duration="2000"
        app:autoTransition="animateToEnd">

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/status_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/status_tv"
            app:layout_constraintBottom_toBottomOf="@id/status_tv"
            android:alpha="0.0"
        />
        <Constraint
            android:id="@+id/status_tv"
            app:layout_constraintStart_toStartOf="@id/filename_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="1.0"
            android:alpha="0.0"
            />
        <Constraint
            android:id="@+id/filename_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_label_tv"
            android:alpha="0.0"
            />
        <Constraint
            android:id="@+id/filename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/filename_label_tv"
            app:layout_constraintTop_toBottomOf="@+id/status_tv"
            android:alpha="0.0">
        </Constraint>
        <Constraint
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filename_tv"
            android:alpha="0.0">
        </Constraint>
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/status_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/status_tv"
            app:layout_constraintBottom_toBottomOf="@id/status_tv"
            android:alpha="1.0"
            />
        <Constraint
            android:id="@+id/status_tv"
            app:layout_constraintStart_toStartOf="@id/filename_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.24"
            android:alpha="1.0"/>
        <Constraint
            android:id="@+id/filename_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_label_tv"
            android:alpha="1.0"
            />
        <Constraint
            android:id="@+id/filename_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/filename_label_tv"
            app:layout_constraintTop_toBottomOf="@+id/status_tv"
            android:alpha="1.0">
        </Constraint>
        <Constraint
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filename_tv"
            android:alpha="1.0">
        </Constraint>
    </ConstraintSet>
</MotionScene>